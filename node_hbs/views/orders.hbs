<h1>Your Orders</h1>
 
<div id="order">
    {{#if orders.length}}
        {{#each orders}}
            <div class="row">
                <div class="col s6 offset-s3">
                    <div class="card">
                        <div class="card-content">
                            <span class="card-title">
                                Order <small>{{_id}}</small>
                            </span>
                            <p>{{date}}</p>
                            <p><em>{{user.userId.name}}</em> {{user.userId.email}}</p>

                            <ol>
                                {{#each courses}}
                                <li>
                                   <img class="basket__img" src="{{course.img}}" alt="{{course.title}}"> {{course.title}} (x <strong>{{count}}</strong>)
                                </li>
                                {{/each}}
                            </ol>
                            <hr>

                            <p>Value: <span class="price">{{price}}</span></p>
                        </div>
                    </div>
                </div>
            </div>

            {{/each}}
       
    {{else}}
    <p>Order is empty </p>
    {{/if}}
</div>
