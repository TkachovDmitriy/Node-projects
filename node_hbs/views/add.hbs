<h1>add courses</h1>

<form action="/add" method="POST">
    <div class="input-field ">
        <input  id="title" type="text" name="title" class="validate" required>
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="wrong name" ></span>
    </div>

    <div class="input-field ">
        <input  id="price" type="number" name="price" class="validate" required min="1">
        <label for="price">Price C</label>
        <span class="helper-text" data-error="wrong price" ></span>
    </div>
    
    <div class="input-field ">
        <input  id="img" type="text"  name="img"class="validate" required>
        <label for="img">URL image</label>
        <span class="helper-text" data-error="wrong img" ></span>
    </div>

    <button class="btn btn-primary" type="submit"> Add Course</button>
</form>